{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "News Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "ICF",
        "PRESS RELEASE",
        "PRE EVENT REPORT",
        "EVENT REPORT",
        "FEATURE"
      ]
    },
    "subcategory": {
      "type": "enumeration",
      "enum": [
        "ALL",
        "TRACK",
        "ROAD BIKE",
        "OFF ROAD",
        "SPORTBIZ"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "hot_news": {
      "type": "boolean"
    },
    "sub_title": {
      "type": "string"
    }
  }
}
